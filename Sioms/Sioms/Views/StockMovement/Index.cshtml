@model IEnumerable<SIOMS.Models.StockMovement>

<h2>Stock Movement Log</h2>

<table class="table table-bordered table-striped mt-3">
    <thead>
        <tr>
            <th>Date</th>
            <th>Product</th>
            <th>Type</th>
            <th>Qty Change</th>
            <th>Final Stock</th>
            <th>Reference</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.MovementDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@m.Product?.Name</td>
                <td>@m.MovementType</td>
                <td>@m.QuantityChanged</td>
                <td>@m.FinalStock</td>
                <td>@m.ReferenceNumber</td>
            </tr>
        }
    </tbody>
</table>
