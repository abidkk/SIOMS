@model IEnumerable<SIOMS.Models.SalesOrder>

<h2>Sales Orders</h2>

<a class="btn btn-primary" asp-action="Create">New Sales Order</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Date</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.Customer?.Name</td>
                <td>@o.OrderDate.ToShortDateString()</td>
                <td>@o.TotalAmount</td>
                <td><a asp-action="Details" asp-route-id="@o.Id">Details</a></td>
            </tr>
        }
    </tbody>
</table>
